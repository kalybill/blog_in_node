<%- include('../layouts/adminHeader.ejs') %> 
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
       <div class="card">
        <div class="card-body">
            <button><a href="/admin/blog/add-blog">Add New</a></button>
            <table class="table">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  
                 <% if (blog.length > 0) { %>
                  <% blog.forEach(val => { %>
                    <tr>
                      <td><%= val.title %> </td>
                      <td><%= val.body %> </td>
                      <td>
                        <div class="row">
                          <div class="col-md-6"><button class="btn btn-danger btn-sm">Delete</button></div>
                          <div class="col-md-6"><button class="btn btn-primary btn-sm">Edit</button></div>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                 <% }else{ %>
                    no data
                 <%}%>
                </tbody>
            </table>
        </div>
       </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  
<%- include('../layouts/adminFooter.ejs') %> 